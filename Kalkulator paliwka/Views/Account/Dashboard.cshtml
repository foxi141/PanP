@{
    var username = ViewBag.Username;
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Kalkulator Paliwka</title>
</head>
<body>
    @if (!string.IsNullOrEmpty(username))
    {
        <h1>Witaj, @username!</h1>
        <p>Witaj na swoim panelu użytkownika. Możesz teraz dodać dane paliwowe do swojego pojazdu.</p>

        <!-- Link do strony dodawania danych paliwowych -->
        <a href="@Url.Action("RedirectToAdd", "UserDashboard")">Dodaj dane paliwowe</a>
    }
    else
    {
        <p>Nie jesteś zalogowany. <a href="@Url.Action("Login", "Account")">Zaloguj się</a></p>
    }
</body>
</html>
