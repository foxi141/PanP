@model KalkulatorPaliwka.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<!-- Wyświetlanie błędów walidacji, jeśli są -->
@if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
{
    <div style="color: red;">
        @ViewData["ErrorMessage"]
    </div>
}

<form class="login-model" method="post" asp-action="Login">
    <div>
        <label for="Username">Username</label>
        <input type="text" id="Username" name="username" value="@Model.username" />
    </div>
    <div>
        <label for="Password">Password</label>
        <input type="password" id="Password" name="passwordhash" value="@Model.passwordhash" />
    </div>
    
   
    <button type="submit">Login</button>
</form>
<style>
    .login-model{
        display:flex;
        flex-direction:column;
        color:white;
    }
</style>
