@{
    ViewData["Title"] = "Panel Administratora";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Panel Administratora PRDM S.A.</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4">

        <div class="col">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Użytkownicy</h5>
                    <p class="card-text">Zarządzaj kontami użytkowników.</p>
                    <a href="/Admin/Users" class="btn btn-danger">Przeglądaj</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Historia użytkowników</h5>
                    <p class="card-text">Zobacz działania poszczególnych użytkowników.</p>
                    <a href="/Admin/UserHistory" class="btn btn-danger">Historia</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Dodaj pojazd</h5>
                    <p class="card-text">Dodaj nowy pojazd do systemu.</p>
                    <a href="/Admin/AddVehicle" class="btn btn-danger">Dodaj</a>
                </div>
            </div>
        </div>

      

        <div class="col">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Przypisz pojazd</h5>
                    <p class="card-text">Przypisz pojazd konkretnemu użytkownikowi.</p>
                    <a href="/Admin/AssignVehicle" class="btn btn-danger">Przypisz</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Lista pojazdów</h5>
                    <p class="card-text">Zarządzaj wszystkimi pojazdami – edytuj, usuwaj i dodawaj.</p>
                    <a href="/Admin/Vehiclelist" class="btn btn-danger">Zarządzaj</a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Dodaj użytkownika</h5>
                    <p class="card-text">Stwórz konto dla nowego pracownika.</p>
                    <a href="/Admin/AddUser" class="btn btn-danger">Dodaj użytkownika</a>
                </div>

            </div>
            
        </div>
        <div class="col">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Usuń użytkownika</h5>
                    <p class="card-text">Usuń konto użytkownika z systemu.</p>
                    <a href="/Admin/DeleteUser" class="btn btn-danger">Usuń</a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Edytuj użytkownika</h5>
                    <p class="card-text">Zaktualizuj dane i avatar istniejącego konta.</p>
                    <a href="/Admin/EditUser" class="btn btn-danger">Edytuj</a>
                </div>
            </div>
        </div>


    </div>
</div>
