@model IEnumerable<KalkulatorPaliwka.Models.User>

@{
    ViewData["Title"] = "Users Management";
}

<h1>Users</h1>

<a href="/AdminDashboard/AddUser">Add New User</a>

<table>
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.username</td>
                <td>@user.email</td>
                <td>
                    <a href="/AdminDashboard/EditUser/@user.userid">Edit</a> |
                    <a href="/AdminDashboard/DeleteUser/@user.userid" onclick="return confirm('Are you sure?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a href="@Url.Action("Index", "AdminDashboard")">
        <button type="button">Powrót </button>
    </a>
</div>