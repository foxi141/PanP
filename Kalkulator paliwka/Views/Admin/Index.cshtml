@model dynamic

@{
    ViewData["Title"] = "Admin Dashboard";
}

<h1>Admin Dashboard</h1>

<div>
    <h3>Statistics</h3>
    <ul>
        <li>Total Users: @Model.TotalUsers</li>
        <li>Total Vehicles: @Model.TotalVehicles</li>
        <li>Total Fuel Consumption: @Model.TotalFuelConsumption L</li>
    </ul>
</div>

<div>
    <h3>Recent Activities</h3>
    <table>
        <thead>
            <tr>
                <th>Username</th>
                <th>Date</th>
                <th>Fuel Consumption</th>
                <th>Total Cost</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var activity in Model.RecentActivities)
            {
                <tr>
                    <td>@activity.username</td>
                    <td>@activity.Date.ToShortDateString()</td>
                    <td>@activity.FuelConsumption L</td>
                    <td>@activity.TotalCost $</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <h3>Actions</h3>
    <ul>
        <li><a href="/Admin/AssignVehicle">Assign Vehicle</a></li>
        <li><a href="/Admin/AddVehicle">Add Vehicle</a></li>
        <li><a href="/Admin/VehicleList">View Vehicles</a></li>
        <li><a href="/Admin/UserHistory">User Fuel History</a></li>
        <li><a href="/Admin/AddUser">Add User</a></li>
    </ul>
</div>
