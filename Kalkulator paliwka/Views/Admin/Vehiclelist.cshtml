@model IEnumerable<KalkulatorPaliwka.Models.Vehicles>

@{
    ViewData["Title"] = "Lista pojazdów";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Lista pojazdów</h2>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Zdjęcie</th>
                <th>Marka</th>
                <th>Model</th>
                <th>Rejestracja</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var vehicle in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(vehicle.photopath))

                        {
                            <img src="@vehicle.photopath" width="80" class="img-thumbnail" />
                        }

                        else

                        {
                            <span class="text-muted">Brak</span>
                        }
                    </td>
                    <td>@vehicle.Brand</td>
                    <td>@vehicle.Model</td>
                    <td>@vehicle.RegistrationNumber</td>
                    <td>
                        <a href="/Admin/EditVehicle/@vehicle.Id" class="btn btn-sm btn-primary">Edytuj</a>
                        <a href="/Admin/DeleteVehicle/@vehicle.Id" class="btn btn-sm btn-danger" onclick="return confirm('Na pewno usunąć?');">Usuń</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
