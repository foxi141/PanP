@model IEnumerable<KalkulatorPaliwka.Models.Vehicles>

@{
    ViewData["Title"] = "Zarządzanie pojazdami";
}

<h2 class="mb-4">Pojazdy</h2>

<a class="btn btn-success mb-3" href="/Admin/AddVehicle">Dodaj nowy pojazd</a>

<table class="table table-bordered table-striped align-middle">
    <thead class="table-dark">
        <tr>
            <th>Zdjęcie</th>
            <th>Marka</th>
            <th>Model</th>
            <th>Numer rejestracyjny</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vehicle in Model)

        {
            <tr>
                <td style="width: 120px;">
                    <img src="@vehicle.photopath" alt="Foto" width="100" height="60" style="object-fit:cover;" />
                </td>
                <td>@vehicle.Brand</td>
                <td>@vehicle.Model</td>
                <td>@vehicle.RegistrationNumber</td>
                <td>
                    <a asp-action="DeleteVehicle" asp-route-id="@vehicle.Id" class="btn btn-danger btn-sm" onclick="return confirm('Czy na pewno chcesz usunąć ten pojazd?');">
                        Usuń
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a class="btn btn-secondary" href="@Url.Action("Index", "AdminDashboard")">Powrót</a>
</div>
