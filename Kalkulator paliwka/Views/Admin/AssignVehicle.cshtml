@{
    ViewData["Title"] = "Przypisz pojazd do użytkownika";
}

<h2 class="mb-4">Przypisz pojazd</h2>

@if (TempData["Message"] != null)

{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<form asp-action="AssignVehicle" method="post">
    <div class="form-group mb-3">
        <label for="UserId">Użytkownik:</label>
        <select name="UserId" class="form-control" required>
            <option value="">-- wybierz użytkownika --</option>
            @foreach (var user in ViewBag.Users as List<SelectListItem>)
            {
                <option value="@user.Value">@user.Text</option>
            }
        </select>
    </div>

    <div class="form-group mb-3">
        <label for="VehicleId">Pojazd:</label>
        <select name="VehicleId" class="form-control" required>
            <option value="">-- wybierz pojazd --</option>
            @foreach (var vehicle in ViewBag.Vehicles as List<SelectListItem>)
            {
                <option value="@vehicle.Value">@vehicle.Text</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Przypisz pojazd</button>
</form>
