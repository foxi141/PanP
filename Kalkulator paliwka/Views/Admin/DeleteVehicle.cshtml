@model KalkulatorPaliwka.Models.Vehicles

@{
    ViewData["Title"] = "Delete Vehicle";
}

<h2>Delete Vehicle</h2>
<p>Are you sure you want to delete this vehicle?</p>

<div>
    <p><strong>Brand:</strong> @Model.Brand</p>
    <p><strong>Model:</strong> @Model.Model</p>
    <p><strong>Registration Number:</strong> @Model.RegistrationNumber</p>
</div>

<form method="post" asp-action="DeleteVehicleConfirmed" asp-route-id="@Model.Id">
    <button type="submit">Delete</button>
    <a asp-action="VehicleList">Cancel</a>
</form>
