@model KalkulatorPaliwka.Models.Vehicles

@{
    ViewData["Title"] = "Delete Vehicle";
}

<h1>Delete Vehicle</h1>

<p>Are you sure you want to delete this vehicle?</p>

<div>
    <strong>Brand:</strong> @Model.Brand<br />
    <strong>Model:</strong> @Model.Model<br />
    <strong>Registration Number:</strong> @Model.RegistrationNumber
</div>

<form asp-action="DeleteVehicle" method="post">
    <input type="hidden" name="registrationNumber" value="@Model.RegistrationNumber" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="VehicleList" class="btn btn-secondary">Cancel</a>
</form>
<div>
    <a href="@Url.Action("Index", "AdminDashboard")">
        <button type="button">Powrót </button>
    </a>
</div>