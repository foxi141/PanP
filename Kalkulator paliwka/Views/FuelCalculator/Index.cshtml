@model Kalkulator_paliwka.Models.FuelCalculatorModel

<h1>Kalkulator spalania</h1>

<div>
    <h2>Pojazd przypisany:</h2>
    <p><strong>Marka:</strong> @ViewBag.Vehicle.Make</p>
    <p><strong>Model:</strong> @ViewBag.Vehicle.Model</p>
    <p><strong>Rejestracja:</strong> @ViewBag.Vehicle.RegistrationNumber</p>
</div>

<form method="post">
    <div>
        <label for="kilometers">Kilometry przebyte:</label>
        <input type="number" id="kilometers" name="Kilometers" step="0.01" required value="@Model.Kilometers" />
        @Html.ValidationMessageFor(m => m.Kilometers)
    </div>
    <div>
        <label for="averageConsumption">Średnia spalania (l/100 km):</label>
        <input type="number" id="averageConsumption" name="AverageConsumption" step="0.01" required value="@Model.AverageConsumption" />
        @Html.ValidationMessageFor(m => m.AverageConsumption)
    </div>
    <div>
        <label for="fuelBefore">Stan paliwa przed zatankowaniem (l):</label>
        <input type="number" id="fuelBefore" name="FuelBefore" step="0.01" required value="@Model.FuelBefore" />
        @Html.ValidationMessageFor(m => m.FuelBefore)
    </div>
    <button type="submit">Oblicz</button>
</form>

@if (Model.TotalFuelNeeded.HasValue)
{
    <div>
        <h2>Wynik:</h2>
        <p>Potrzebne paliwo: <strong>@Model.TotalFuelNeeded.Value.ToString("F2") l</strong></p>
    </div>
}
