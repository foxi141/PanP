<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kalkulator Paliwka</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <video autoplay muted loop playsinline id="background-video">
        <source src="/videos/background.mp4" type="video/mp4" />
    </video>
    <header class="bg-warning text-dark py-3">
        <div class="container d-flex align-items-center">
            <img src="~/images/logo.png" alt="PRDM S.A." width="60" height="60" class="me-3" />
            <h1 class="h4 mb-0">System Zarządzania Paliwem - PRDM S.A.</h1>
        </div>
    </header>

    <nav class="navbar navbar-expand-lg navbar-dark bg-danger">
        <div class="container">
            
<a class="navbar-brand" href="@(Context.Session.GetString("adminid") != null 
    ? Url.Action("Index", "AdminDashboard") 
    : Context.Session.GetString("userid") != null 
        ? Url.Action("Index", "Dashboard") 
        : Url.Action("Index", "Home"))">
    PRDM S.A.
</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    @if (!User.Identity.IsAuthenticated && string.IsNullOrEmpty(Context.Session.GetString("userid")) && string.IsNullOrEmpty(Context.Session.GetString("adminid")))

                    {
                        <li class="nav-item dropdown">
                            <a class="btn btn-outline-light dropdown-toggle" role="button" data-bs-toggle="dropdown">
                                Logowanie
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="/Account/Login">Użytkownik</a></li>
                                <li><a class="dropdown-item" href="/Admin/Login">Administrator</a></li>
                            </ul>
                        </li>
                    }

                    else

                    {
                        <li class="nav-item">
                            <form method="post" action="/Account/Logout" class="d-inline">
                                <button type="submit" class="btn btn-outline-light">Wyloguj</button>
                            </form>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main class="container my-4">
        @RenderBody()
    </main>

    <footer class="bg-dark text-white py-4">
        <div class="container text-center">
            <p class="mb-1">© 2025 PRDM S.A. Szamotuły</p>
            <p class="mb-0">ul. Powstańców Wlkp. 75 | tel. 61 292 06 04 | email: prdmsa@prdmsa.pl</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
