@{
    ViewData["Title"] = "Dashboard";
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        h1 {
            color: #4CAF50;
        }

        .dashboard-container {
            display: flex;
            justify-content: center;
            margin-top: 50px;
        }

        .dashboard-option {
            background-color: #f4f4f4;
            padding: 20px;
            margin: 0 20px;
            border-radius: 8px;
            text-align: center;
            width: 200px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .dashboard-option a {
                text-decoration: none;
                color: white;
                background-color: #4CAF50;
                padding: 10px 20px;
                border-radius: 4px;
                font-size: 16px;
            }

                .dashboard-option a:hover {
                    background-color: #45a049;
                }
    </style>
</head>
<body>

    <h1>Witaj na swoim Dashboardzie!</h1>
    <p>Wybierz jedną z poniższych opcji:</p>

    <div class="dashboard-container">
        <!-- Opcja 1: Dodaj dane paliwowe -->
        <div class="dashboard-option">
            <h3>Dodaj dane paliwowe</h3>
            <p>Chcesz dodać nowe dane dotyczące paliwa?</p>
            <a href="@Url.Action("AddFuelData", "Dashboard")">Dodaj dane</a>
        </div>

        <!-- Opcja 2: Historia danych paliwowych -->
        <div class="dashboard-option">
            <h3>Przeglądaj historię</h3>
            <p>Chcesz zobaczyć swoją historię danych paliwowych?</p>
            <a href="@Url.Action("FuelHistory", "Dashboard")">Zobacz historię</a>
        </div>
    </div>

</body>
</html>
