@{
    ViewData["Title"] = "Panel Użytkownika";

    var avatarPath = Context.Session.GetString("avatar") ?? "/images/avatar.png";

    var username = Context.Session.GetString("username") ?? "Użytkownik";
}

<div class="container mt-4">
    <div class="text-center mb-4">
        <img src="@avatarPath" class="rounded-circle shadow" width="100" height="100" />
        <h3 class="mt-2">Witaj, @username</h3>
    </div>

    <div class="row row-cols-1 row-cols-md-2 g-4">

        <div class="col">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Historia tankowań</h5>
                    <p class="card-text">Zobacz historię zużycia paliwa dla Twoich pojazdów.</p>
                    <a href="/FuelData/History" class="btn btn-primary">Historia</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">Dodaj tankowanie</h5>
                    <p class="card-text">Dodaj nowe zużycie paliwa do systemu.</p>
                    <a href="/FuelData/Add" class="btn btn-success">Dodaj</a>
                </div>
            </div>
        </div>

    </div>
</div>
